{
  "compilerOptions": {
    "target": "ES2020",                       // Version JS cible (Node moderne)
    "module": "commonjs",                     // Système de modules utilisé par Node.js
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,                    
    "strict": true,                           // Active toutes les vérifications strictes TS
    "esModuleInterop": true,                  // Pour bien gérer les imports CommonJS/ESM
    "forceConsistentCasingInFileNames": true,// Pour éviter les erreurs liées à la casse
    "skipLibCheck": true,                     // Ignore les vérifications des types des dépendances
    "outDir": "dist",                         // Dossier de sortie en build (utile en prod)
    "rootDir": "src"                          // Racine des fichiers sources TS
  },
  "include": ["src"],                         // Inclure tout le dossier src
  "exclude": ["node_modules", "dist"]        // Exclure node_modules et dist
}

